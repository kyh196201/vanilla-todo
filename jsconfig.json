{
	"allowJs": true,
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
			"Components/*": ["./src/js/components/*"],
			"Store/*": ["./src/js/store/*"],
			"Api/*": ["./src/js/api/*"],
			"Utils/*": ["./src/js/utils/*"],
			"Core/*": ["./src/js/core/*"],
			"Config/*": ["./src/js/config/*"],
			"Lib/*": ["./src/js/lib/*"],
		},
	},
	"exclude": ["./node_modules/*", "./dist/*"],
	"include": ["./src/**/*"]
}